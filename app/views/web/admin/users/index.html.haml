%ul.navbar Shop
%strong List of users
%p 
  =link_to "Create users", new_admin_user_path

%table
  %tr
    %th Name
    %th Surname
    %th Email
    %th{:colspan => 3}
  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.surname
      %td= user.email
      %td= link_to "Edit", edit_admin_user_path(user)
      %td= link_to "Show", admin_user_path(user)
      %td= link_to "Delete", admin_user_path(user), 
      method: :delete, 
      data: { confirm: "Are you sure?" }