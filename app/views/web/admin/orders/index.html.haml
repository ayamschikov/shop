%strong= t 'order.index'
%p 
  =link_to t('order.create'), new_admin_order_path, class: "btn btn-success"

%table.bs-10
  %tr.row
    %th.col-md-3= Order.human_attribute_name(:id)
    %th.col-md-3= Order.human_attribute_name(:total_price)
    %th.col-md-3= Order.human_attribute_name(:created_at)
    %th{:colspan => 3}
  - @orders.each do |order|
    %tr.row
      %td.col-md-2= order.id
      %td.col-md-2= humanized_money_with_symbol order.total_price
      %td.col-md-2= order.created_at
      -# %td= link_to t(:edit), edit_admin_order_path(order)
      %td.col-md-2= link_to t(:show), admin_order_path(order), class: "btn btn-primary"
      %td.col-md-2= link_to t(:delete), admin_order_path(order), class: "btn btn-danger",
      method: :delete, 
      data: { confirm: t(:confirmation) }