%strong= t 'order.index'
%p 
  =link_to t('order.create'), new_admin_order_path

%table
  %tr
    %th= Order.human_attribute_name(:id)
    %th= Order.human_attribute_name(:total_price)
    %th= Order.human_attribute_name(:created_at)
    %th{:colspan => 3}
  - @orders.each do |order|
    %tr
      %td= order.id
      %td= humanized_money_with_symbol order.total_price
      %td= order.created_at
      -# %td= link_to t(:edit), edit_admin_order_path(order)
      %td= link_to t(:show), admin_order_path(order)
      %td= link_to t(:delete), admin_order_path(order), 
      method: :delete, 
      data: { confirm: t(:confirmation) }