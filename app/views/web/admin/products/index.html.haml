= render "web/admin/shared/navbar"

%strong List of products
%p 
  =link_to "Create product", new_admin_product_path

%table
  %tr
    %th= t 'product.name'
    %th= t 'product.price'
    %th= t 'product.amount'
    %th{:colspan => 3}
  - @products.each do |product|
    %tr
      %td= product.name
      %td= humanized_money_with_symbol product.price
      %td= product.amount
      %td= link_to "#{t :edit}", edit_admin_product_path(product)
      %td= link_to "#{t :show}", admin_product_path(product)
      %td= link_to "#{t :delete}", admin_product_path(product), 
      method: :delete, 
      data: { confirm: "#{t :confirmation}" }
