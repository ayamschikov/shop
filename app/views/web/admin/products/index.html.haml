%ul.navbar Shop
%strong List of products
%p 
  =link_to "Create product", new_admin_product_path

%table
  %tr
    %th Name
    %th Price
    %th Amount
    %th{:colspan => 3}
  - @products.each do |product|
    %tr
      %td= product.name
      %td= "#{product.price} #{product.price_currency}"
      %td= product.amount
      %td= link_to "Edit", edit_admin_product_path(product)
      %td= link_to "Show", admin_product_path(product)
      %td= link_to "Delete", admin_product_path(product), 
      method: :delete, 
      data: { confirm: "Are you sure?" }
