%strong= t 'product.index.title'
%p 
  =link_to t('product.create.title'), new_admin_product_path

%table
  %tr
    %th= Product.human_attribute_name(:name)
    %th= Product.human_attribute_name(:price)
    %th= Product.human_attribute_name(:amount)
    %th{:colspan => 3}
  - @products.each do |product|
    %tr
      %td= product.name
      %td= humanized_money_with_symbol product.price
      %td= product.amount
      %td= link_to t(:edit), edit_admin_product_path(product)
      %td= link_to t(:show), admin_product_path(product)
      %td= link_to t(:delete), admin_product_path(product), 
      method: :delete, 
      data: { confirm: t(:confirmation) }